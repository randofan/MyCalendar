{
  "manifest_version": 3,
  "name": "MyCalendar",
  "version": "0.0.1",
  "description": "Automatically export your UW course calendar into an iCalendar file",
  "action": {
    "default_popup": "popup/export.html"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://sdb.admin.uw.edu/sisStudents/uwnetid/schedule.aspx?Q=*",
        "https://sdb.admin.uw.edu/sisStudents/uwnetid/schedule.aspx"
      ]
    }
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "host_permissions": [
    "https://sdb.admin.uw.edu/sisStudents/uwnetid/schedule.aspx?Q=*",
    "https://sdb.admin.uw.edu/sisStudents/uwnetid/schedule.aspx",
    "https://www.google.com/*", 
    "https://www.uw.edu/students/reg/2223cal.html/*",
    "https://www.washington.edu/students/reg/2223cal.html/*"

  ],
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "scripting"
  ]
}